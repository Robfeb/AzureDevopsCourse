@model IEnumerable<PizzAzureDevops.Models.Pizza>

<h2>Available Pizzas</h2>
<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Price</th>
            <th>Order</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var pizza in Model)
        {
            <tr>
                <td>@pizza.Name</td>
                <td>@pizza.Description</td>
                <td>@pizza.Price</td>
                <td><a href="@Url.Action("Create", "Order", new { pizzaId = pizza.Id })" class="btn btn-primary">Order</a></td>
            </tr>
        }
    </tbody>
</table>
